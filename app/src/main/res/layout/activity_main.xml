<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.shenkar.hashahar.tal.calculetor.MainActivity">

    <TextView
        android:id="@+id/screen"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/screen_border"
        android:layout_margin="5dp"
        android:layout_alignParentTop="true"/>

    <LinearLayout
        android:id="@+id/first_buttons_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/screen"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/button1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="1"
            tools:layout_editor_absoluteX="40dp"
            tools:layout_editor_absoluteY="62dp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="2"
            tools:layout_editor_absoluteX="144dp"
            tools:layout_editor_absoluteY="62dp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="3"
            tools:layout_editor_absoluteX="247dp"
            tools:layout_editor_absoluteY="62dp" />

        <Button
            android:id="@+id/button4"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="4"
            tools:layout_editor_absoluteX="40dp"
            tools:layout_editor_absoluteY="120dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/second_buttons_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/first_buttons_row"
        android:orientation="horizontal">
        <Button
            android:id="@+id/button5"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="5"
            tools:layout_editor_absoluteX="144dp"
            tools:layout_editor_absoluteY="120dp" />

        <Button
            android:id="@+id/button6"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="6"
            tools:layout_editor_absoluteX="247dp"
            tools:layout_editor_absoluteY="120dp" />

        <Button
            android:id="@+id/button7"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="7"
            tools:layout_editor_absoluteX="40dp"
            tools:layout_editor_absoluteY="180dp" />

        <Button
            android:id="@+id/button8"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="8"
            tools:layout_editor_absoluteX="144dp"
            tools:layout_editor_absoluteY="180dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/third_buttons_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/second_buttons_row"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button9"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="9"
            tools:layout_editor_absoluteX="247dp"
            tools:layout_editor_absoluteY="180dp" />

        <Button
            android:id="@+id/buttonPlus"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="+"
            tools:layout_editor_absoluteX="40dp"
            tools:layout_editor_absoluteY="240dp" />

        <Button
            android:id="@+id/buttonMinus"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="-"
            tools:layout_editor_absoluteX="144dp"
            tools:layout_editor_absoluteY="240dp" />

        <Button
            android:id="@+id/buttonMulti"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="*"
            tools:layout_editor_absoluteX="247dp"
            tools:layout_editor_absoluteY="240dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/forth_buttons_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/third_buttons_row"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonDiv"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="\"
            tools:layout_editor_absoluteX="144dp"
            tools:layout_editor_absoluteY="300dp" />

        <Button
            android:id="@+id/buttonEqual"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="="
            tools:layout_editor_absoluteX="144dp"
            tools:layout_editor_absoluteY="300dp" />

        <Button
            android:id="@+id/buttonClear"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Clear"
            tools:layout_editor_absoluteX="40dp"
            tools:layout_editor_absoluteY="300dp" />


    </LinearLayout>




</RelativeLayout>
